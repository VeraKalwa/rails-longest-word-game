<div class="container" align="center">
<h1>New game</h1>
<div class=d-flex justify-content-between border border-dark>
<% @letters.each do |number| %>

<p class="number"><%= number %></p>
<% end %>

</div>

<p> What is the longest word you can find?</p>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  <input class="form-control" type="text" name="word">
  <br>
  <input type="submit" class="btn btn-primary" value="Play">
</form>
</div>

